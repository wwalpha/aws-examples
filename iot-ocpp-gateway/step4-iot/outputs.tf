# ----------------------------------------------------------------------------------------------
# Amazon Root CA Certificate ARN
# ----------------------------------------------------------------------------------------------
output "iot_amazon_root_ca_arn" {
  value = aws_secretsmanager_secret.root_ca.arn
}

# ----------------------------------------------------------------------------------------------
# Amazon PEM Certificate ARN
# ----------------------------------------------------------------------------------------------
output "iot_pem_certificate_arn" {
  value = aws_secretsmanager_secret.pem_cert.arn
}

# ----------------------------------------------------------------------------------------------
# Amazon Public Key ARN
# ----------------------------------------------------------------------------------------------
output "iot_public_key_arn" {
  value = aws_secretsmanager_secret.public_key.arn
}

# ----------------------------------------------------------------------------------------------
# Amazon Private Key ARN
# ----------------------------------------------------------------------------------------------
output "iot_private_key_arn" {
  value = aws_secretsmanager_secret.private_key.arn
}
